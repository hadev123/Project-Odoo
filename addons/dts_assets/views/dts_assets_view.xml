<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="dts_assets_tree_view" model="ir.ui.view">
            <field name="name">dts_assets.tree.view</field>
            <field name="model">dts_assets</field>
            <field name="arch" type="xml">
                <tree string="Assets">
                    <field name="proposer" />
                    <field name="department_proposer" />
                    <field name="propose_asset" />
                    <field name="time_has_assets" />
                    <field name="recommended_reason" />
                    <field name="compute_user" class="text-success"/>
                    <field name="state_manager" class="text-success" />
                    <field name="state_president" class="text-success" />
                    <field name="state_general_director" class="text-success" />
                </tree>
            </field>
        </record>

        <record id="dts_assets_form_view" model="ir.ui.view">
            <field name="name">dts_assets.form.view</field>
            <field name="model">dts_assets</field>
            <field name="arch" type="xml">
                <form string="Assets">
                    <header>
                        <button name="action_submit_approval" string="CHỜ DUYỆT" type="object" />
                        <button name="action_approve" string="DUYỆT" type="object" />
                        <button name="action_reject" string="TỪ CHỐI" type="object" />
                        <field name="state_manager" widget="statusbar" statusbar_visible="draft_manager,waiting_approval_manager,approved_manager,rejected_manager" nolable="1" readonly="1" />
                        <field name="state_president" widget="statusbar" statusbar_visible="draft_president,waiting_approval_president,approved_president,rejected_president" nolable="1" readonly="1" />
                        <field name="state_general_director" widget="statusbar" statusbar_visible="draft,waiting_approval,approved,rejected" nolable="1" readonly="1" />
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <label for="proposer"></label>
                            <h2>
                                <field name="proposer" />
                            </h2>
                            <label for="department_proposer"></label>
                            <h4>
                                <field name="department_proposer" />
                            </h4>
                            <label for="propose_asset"></label>
                            <h3>
                                <field name="propose_asset" />
                            </h3>
                        </div>

                        <group>
                            <group>
                                <field name="time_has_assets" />
                                <field name="recommended_reason" />
                                <field name="check_asset" />
                            </group>
                            <group>
                                <field name="manager_id" />
                                <field name="president_id" />
                                <field name="general_director_id" />
                            </group>
                        </group>
                        <notebook>
                            <page name="detail_asset" string="Chi Tiết Tài Sản">
                                <group>
                                    <field name="table_assets" editable="bottom"></field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="dts_assets_kanban_view" model="ir.ui.view">
            <field name="name">dts_assets.kanban</field>
            <field name="model">dts_assets</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="proposer" />
                    <field name="department_proposer" />
                    <field name="propose_asset" />
                    <field name="time_has_assets" />
                    <field name="recommended_reason" />
                    <field name="compute_user" class="text-success"/>
                    <field name="state_manager" class="text-success" />
                    <field name="state_president" class="text-success" />
                    <field name="state_general_director" class="text-success" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <h5>
                                        <field name="proposer" />
                                    </h5>
                                    <h6>
                                        <field name="department_proposer" />
                                    </h6>
                                    <ul>
                                        <li t-if="record.propose_asset.raw_value" class="o_text_overflow">
                                            <h6>
                                                <field name="propose_asset" />
                                            </h6>
                                        </li>
                                        <li t-if="record.state_manager.raw_value" class="o_force_sp">
                                            <field name="state_manager" />
                                        </li>
                                        <li t-if="record.state_president.raw_value" class="o_force_sp">
                                            <field name="state_president" />
                                        </li>
                                        <li t-if="record.state_general_director.raw_value" class="o_force_sp">
                                            <field name="state_general_director" />
                                        </li>
                                    </ul>
                                    <div name="tags" />
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_dts_assets" model="ir.actions.act_window">
            <field name="name">Tài Sản</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dts_assets</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('dts_assets_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('dts_assets_form_view')}), 
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('dts_assets_kanban_view')})]" />
        </record>

        <menuitem id="menu_dts_assets" name="Tài Sản" action="action_dts_assets" groups="base.group_user" sequence="1" />
        <menuitem id="menu_dts_assets_l" name="Danh mục Tài Sản" action="action_dts_assets" parent="menu_dts_assets" groups="base.group_user" sequence="10" />
    </data>
</odoo>